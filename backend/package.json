{
  "name": "photo-studio-backend",
  "version": "1.0.0",
  "description": "Backend API for Photo Studio Booking System",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && node scripts/copy-templates.js",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:setup": "node src/database/setup.js",
    "fix:bookings": "ts-node src/scripts/fix-pending-bookings.ts",
    "send-reminders": "ts-node src/scripts/send-reminders.ts",
    "send-reminders:prod": "node dist/scripts/send-reminders.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "zod": "^3.22.2",
    "axios": "^1.5.0",
    "crypto": "^1.0.1",
    "nodemailer": "^6.9.4",
    "handlebars": "^4.7.8",
    "node-cron": "^3.0.2",
    "winston": "^3.10.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "xml2js": "^0.6.2",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/pg": "^8.10.2",
    "@types/nodemailer": "^6.4.9",
    "@types/node-cron": "^3.0.8",
    "@types/jest": "^29.5.4",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/xml2js": "^0.4.11",
    "typescript": "^5.1.6",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  }
}


