{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://your-backend-domain.vercel.app/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite"
}

